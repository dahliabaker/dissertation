  journal  = {Annual Review of Earth and Planetary Sciences},
  keywords = {Asteroids,Asteroids-dynamics,Celestial mechanics,Meteorites,Nongravitational forces},
  pages    = {157--191},
  title    = {{The Yarkovsky and YORP effects: Implications for asteroid dynamics}},
  volume   = {34},
  year     = {2006}
