  issn      = {00191035},
  journal   = {Icarus},
  keywords  = {Asteroids},
  number    = {2},
  pages     = {430--442},
  publisher = {Elsevier Inc.},
  title     = {{On YORP-induced spin deformations of asteroids}},
  url       = {http://dx.doi.org/10.1016/j.icarus.2009.08.014},
  volume    = {205},
  year      = {2010}
}



