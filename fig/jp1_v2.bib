  doi       = {10.1016/j.icarus.2014.10.011},
  file      = {:Users/dahliabaker/Documents/Mendeley Desktop/Tancredi, Roland, Bruzzone/Icarus/1-s2.0-S0019103514005508-main (3).pdf:pdf},
  issn      = {10902643},
  journal   = {Icarus},
  keywords  = {Asteroid Itokawa,Asteroids, surfaces,Geological processes,Impact processes},
  pages     = {279--290},
  publisher = {Elsevier Inc.},
  title     = {{Distribution of boulders and the gravity potential on asteroid Itokawa}},
  url       = {http://dx.doi.org/10.1016/j.icarus.2014.10.011},
  volume    = {247},
  year      = {2015}
