  eprint        = {1502.01249},
  file          = {:Users/dahliabaker/Documents/Mendeley Desktop/Vokrouhlick{\'{y}} et al/Asteroids IV/1502.01249.pdf:pdf},
  isbn          = {9780816532186},
  journal       = {Asteroids IV},
  pages         = {509--531},
  title         = {{The Yarkovsky and YORP effects}},
  year          = {2015}
}
