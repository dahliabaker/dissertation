  keywords      = {boulders,minor planets asteroids: general,minor planets asteroids: individual (25143 Itokawa,planets and satellites: surfaces},
  mendeley-tags = {boulders},
  number        = {1},
  title         = {{A three-dimensional model of tangential yorp}},
  volume        = {794},
